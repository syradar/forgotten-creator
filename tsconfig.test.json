{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "rootDir": "./",
    "esModuleInterop": true,
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "ES2018",
    "jsx": "react-jsx",
    "allowJs": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["./**/*.test.ts", "./**/*.test.tsx"],
  "exclude": ["./node_modules"]
}
